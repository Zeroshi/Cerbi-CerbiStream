{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    },
    "EnableEncryption": true, // Encrypts metadata fields by default
    "IncludeAdvancedMetadata": false, // Enables capturing response sizes, times, and DB query times
    "IncludeSecurityMetadata": false, // If true, will encrypt UserId, SessionId, and ClientIP
    "EnableDevMode": true, // Prevents sending logs to queues in development mode
    "ApplicationInsightsEnabled": false, // Enables integration with Application Insights
    "CloudProvider": "Azure", // Explicitly set or auto-detect
    "Region": "us-east-1", // Explicitly set or auto-detect
    "Environment": "Production", // Explicitly set (Dev, QA, Staging, Production)
    "ApplicationVersion": "v1.0.0" // Explicitly set version for tracking
  },
  "LoggingDestinations": {
    "UseAzureServiceBus": false,
    "UseRabbitMQ": true,
    "UseKafka": false,
    "UseAzureSQLDatabase": false,
    "QueueConfig": {
      "AzureServiceBusConnectionString": "Endpoint=sb://your-servicebus.servicebus.windows.net/",
      "RabbitMQHost": "localhost",
      "RabbitMQPort": 5672,
      "KafkaBrokers": "localhost:9092",
      "AzureSQLConnectionString": "Server=tcp:your-database.database.windows.net,1433;Initial Catalog=LogsDB;"
    }
  }
}
